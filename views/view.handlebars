        }
        reader.readAsDataURL(file);
    }

    qrcode.callback = function (qrDecodeData) {
      $.ajax({
        type: "GET",
        url: `/blocks?qrCode=${qrDecodeData}`,
        success: function(data) {
          (data.length < 1) ? ('#noresult').show() : displayTable(data);
        },
        beforeSend: function() {
          $('#result').hide();
          $('#noresult').hide();
          $('#resultTable tbody').empty();
        } 
      });
    }

      

    e.preventDefault();
  });
</script>